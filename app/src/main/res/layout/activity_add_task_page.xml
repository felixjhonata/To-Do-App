<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main_app.AddTaskPage"
    android:fitsSystemWindows="true"
    android:background="#111111">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/arrow_back"
        app:backgroundTint="#DC143C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/categoryLbl"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Add Task"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#DC143C"
        android:textSize="30sp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/categoryLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:layout_marginStart="48dp"
        android:text="Category"
        android:textColor="#DC143C"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/categorySpinner"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="#333333"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/taskNameLbl"/>

    <TextView
        android:id="@+id/taskNameLbl"
        android:fontFamily="@font/inter_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Task Name"
        android:textColor="#DC143C"
        app:layout_constraintBottom_toTopOf="@+id/addBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/taskNameEdt"
        android:layout_width="match_parent"
        android:fontFamily="@font/inter_regular"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"
        android:hint="Task name..."
        android:background="#333333"
        android:textColor="@color/white"
        android:textColorHint="#AAAAAA"
        android:textSize="15sp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/taskNameLbl"/>

    <TextView
        android:id="@+id/dueDateLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:layout_marginStart="48dp"
        android:text="Due Date"
        android:textColor="#DC143C"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskNameEdt" />

    <EditText
        android:id="@+id/dueDateEdt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/inter_regular"
        android:text="xxxx-xx-xx"
        android:background="#333333"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/dueDateLbl"/>

    <ImageButton
        android:id="@+id/dueDateBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/calendar"
        android:background="#DC143C"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="@+id/dueDateEdt"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/inter_semibold"
        android:background="#DC143C"
        android:text="Add Task"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>